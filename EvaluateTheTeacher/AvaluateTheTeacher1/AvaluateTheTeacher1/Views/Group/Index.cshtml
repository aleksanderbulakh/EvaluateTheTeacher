@model IEnumerable<AvaluateTheTeacher1.Models.Students.Group>

@{
    ViewBag.Title = "Групи - Оціни викладача";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>@ViewBag.Title</title>
<content>
    <h2>Виберіть дію</h2>

    <p>
        @Html.RouteLink("Додати нову групу", "CreateGroups")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.RouteLink("Редагувати", "EditGroups", new { id = item.GroupId }) |
                    @Html.RouteLink("Детальніше", "DetailsGroups", new { id = item.GroupId }) |
                    @Html.RouteLink("Видалити", "DeleteGroups", new { id = item.GroupId })
                </td>
            </tr>
        }

    </table>
</content>