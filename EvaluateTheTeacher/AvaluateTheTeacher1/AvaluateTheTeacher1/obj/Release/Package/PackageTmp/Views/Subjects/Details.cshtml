@model AvaluateTheTeacher1.CodeReview.ViewModels.SubjectDetailsViewModel

@{
    ViewBag.Title = "Предмет "+Model.Name+" - Оціни викладача";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>@ViewBag.Title</title>
<content>
    <h2>Details</h2>

    <div>
        <h4>Subject</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Cathedra)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cathedra)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>Семестри</dt>

            @foreach (var item in Model.Semesters)
            {
                <dd>з @item.From.ToShortDateString() по @item.To.ToShortDateString()</dd>
            }
        </dl>
    </div>
    <p>        
        @Html.RouteLink("Назад", "SubjectsList")
    </p>
</content>