@using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <div class="menu login-user">
                @if (User.IsInRole("admin"))
                {
                    <div>
                        @Html.RouteLink("Вітаю, " + User.Identity.GetUserName() + "!", "AdminPersonalArea", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </div>
                }
                else
                {
                    @Html.RouteLink("Вітаю, " + User.Identity.GetUserName() + "!", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                }

                <a href="javascript:document.getElementById('logoutForm').submit()">Вийти</a>
            </div>
        }
    }
    else
    {

        <div class="on nav navbar-nav navbar-right">
            @Html.RouteLink("Вхід", "Login")
        </div>
        <button class="cmn-toggle-switch cmn-toggle-switch__htx" onclick="menu_mobile_open()">
            <span>toggle menu</span>
        </button>
        <button class="close_mob cmn-toggle-switch cmn-toggle-switch__htx" onclick="menu_mobile_close()">
            <span>toggle menu</span>
        </button>
    }
