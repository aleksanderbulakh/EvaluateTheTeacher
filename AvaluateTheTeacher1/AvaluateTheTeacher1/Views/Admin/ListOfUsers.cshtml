@model AvaluateTheTeacher1.Models.FilterUser
@{
    ViewBag.Title = "Список користувачів - Оціни викладача";
}

<title>@ViewBag.Title</title>
<content>
    <h2>Список користувачів</h2>
    @using (@Html.BeginForm("ListOfUsers", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Get))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group list-kaf">
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SelectedId, Model.Group, new { @class = "form-control", onchange = "this.form.submit();" })
            </div>
        </div>        
    }
    <table>
        <tr>
            <th>Логін</th>
            <th>Пароль</th>
        </tr>

        @foreach (var S in Model.List)
        {
            <tr>
                <td>@S.UserName</td>
                <td>@S.Password</td>
            </tr>
        }
    </table>
</content>