                            {
                            <td>
                                @Html.RadioButtonFor(model => model.ActivityInClass, infoMas[0, i], htmlAttributes: new { @id = "answer9" + (i + 1).ToString() })
                                <label for=@("answer9"+(i+1).ToString())> </label>
                            </td>
                            }
                        </tr>
                        <tr>
                            <th><li>@Html.Label("На скільки складним виявився курс? ")</li>
                            @Html.ValidationMessageFor(model => model.TheDifficultyOfTheCourse, "", new { @class = "text-danger" })</th>
