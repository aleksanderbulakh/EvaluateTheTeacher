@model AvaluateTheTeacher1.Models.Teachers.VotingFull
@{ 
    ViewBag.Title = "Викладач - Оціни викладача";
    string[,] infoMas = new string[1, 10];
    for (int i = 0; i < 10; i++)
    {
        infoMas[0, i] = (i + 1).ToString();
    }
}
<title>@ViewBag.Title</title>
<content>
    <div class="form-qwestion">
        <div class="title">
            <hr /><h1>Проголосуйте</h1>
        </div>
        <div class="teacher">
            <img src="~/TeacherImg/@ViewBag.Photo" alt="Нет фотографии" class="img-style">
            <div>
                <span>@ViewBag.Name</span><br />
                @Html.ActionLink("Повернутись до списку викладачів", "VoitingMain", "Raiting", htmlAttributes: new { @class = "link" })
            </div>
        </div>
    </div>
