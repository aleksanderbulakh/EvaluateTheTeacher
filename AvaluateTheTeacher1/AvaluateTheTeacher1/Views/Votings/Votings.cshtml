                            {
                                <td>
                                    @Html.RadioButtonFor(model => model.TheDifficultyOfTheCourse, infoMas[0, i], htmlAttributes: new { @id = "answer10" + (i + 1).ToString() })
                                    <label for=@("answer10"+(i+1).ToString())> </label>
                                </td>
                            }
                        </tr> 
                        <tr>
