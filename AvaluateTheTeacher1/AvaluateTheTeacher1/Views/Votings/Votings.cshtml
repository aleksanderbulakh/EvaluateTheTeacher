@model AvaluateTheTeacher1.Models.Teachers.VotingFull
@{
    ViewBag.Title = "Викладач - Оціни викладача";
    string[,] infoMas = new string[1, 10];
    for (int i = 0; i < 10; i++)
    {
        infoMas[0, i] = (i + 1).ToString();
    }
}
<title>@ViewBag.Title</title>
<content>
    <div class="form-qwestion">
        <div class="title">
            <hr /><h1>Проголосуйте</h1>
        </div>
        <div class="teacher">
            <img src="~/TeacherImg/@ViewBag.Photo" alt="Нет фотографии" class="img-style">
            <div>
                <span>@ViewBag.Name</span><br />
                @Html.ActionLink("Повернутись до списку викладачів", "VoitingMain", "Raiting", htmlAttributes: new { @class = "link" })
            </div>
        </div>
    </div>
    @using (Html.BeginForm(Html.BeginForm("VotingsGet", "Votings", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", enctype = "multipart/form-data" })))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="component">
            <table>
                <thead>
                    <tr>
                        <th>Питання</th>
                        @for (int i = 0; i < 10; i++)
                        {
                            <th>@Html.Label((i + 1).ToString())</th>
                        }
                    </tr>
                </thead>
                <tbody class="answers">
                    <tr>
                        <th>
                            @Html.Label("1. Як Ви загалом оцінюєте курс? ")<br />
                            @Html.ValidationMessageFor(model => model.OverallSubject, "", new { @class = "text-danger" })
                        </th>
                        @for (int i = 0; i < 10; i++)
                        {
                            <td>
                                @Html.RadioButtonFor(model => model.OverallSubject, infoMas[0, i], htmlAttributes: new { @id = "answer1" + (i + 1).ToString() })
