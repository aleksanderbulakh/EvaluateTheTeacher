@model AvaluateTheTeacher1.Models.Teachers.Voting

@{
    ViewBag.Title = "Проголосуйте";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Проголосуйте</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Цікавість викладання матеріалу: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table>
                    <thead>
                        <tr>
                            <th>2</th>
                            <th>3</th>
                            <th>4</th>
                            <th>5</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.RadioButtonFor(model => model.Interest, "2", new { htmlAttributes = new { @class = "form-control" }, @checked = true })
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.Interest, "3", new { htmlAttributes = new { @class = "form-control" }})
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.Interest, "4", new { htmlAttributes = new { @class = "form-control" }})
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.Interest, "5", new { htmlAttributes = new { @class = "form-control" }})
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Якість викладання матеріалу: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table>
                    <thead>
                        <tr>
                            <th>2</th>
                            <th>3</th>
                            <th>4</th>
                            <th>5</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.RadioButtonFor(model => model.Quality, "2", new { htmlAttributes = new { @class = "form-control" }, @checked = true })
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.Quality, "3", new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.Quality, "4", new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.Quality, "5", new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Відношення до студентів: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table>
                    <thead>
                        <tr>
                            <th>2</th>
                            <th>3</th>
                            <th>4</th>
                            <th>5</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.RadioButtonFor(model => model.RelevantToStudents, "2", new { htmlAttributes = new { @class = "form-control" }, @checked = true })
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.RelevantToStudents, "3", new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.RelevantToStudents, "4", new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.RelevantToStudents, "5", new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Проголосувати" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутись до списку викладачів", "ListOfTeachers", "ListOfTeachers")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
