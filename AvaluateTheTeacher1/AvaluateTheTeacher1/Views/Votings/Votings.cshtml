    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="component">
            <table>
                <thead>
                    <tr>
                        <th>Питання</th>
                        @for(int i=0; i<10; i++)
                        {
                            <th>@Html.Label((i+1).ToString())</th>
                        }
                    </tr>
                </thead>
                <tbody class="answers">
                    <tr>
                        <th>
                            @Html.Label("Як Ви загалом оцінюєте курс? ")<br/>
                            @Html.ValidationMessageFor(model => model.OverallSubject, "", new { @class = "text-danger" })
                        </th>
                        @for (int i = 0; i < 10; i++)
                        {
                            <td>
                                @Html.RadioButtonFor(model => model.OverallSubject, infoMas[0, i], htmlAttributes: new { @id="answer1"+(i+1).ToString() })
