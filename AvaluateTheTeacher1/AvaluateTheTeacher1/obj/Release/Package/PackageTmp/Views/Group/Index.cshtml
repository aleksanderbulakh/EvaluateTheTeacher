@model IEnumerable<AvaluateTheTeacher1.Models.Students.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<content>
    <h2>Виберіть дію</h2>

    <p>
        @Html.ActionLink("Додати нову групу", "AddNewGroup", "AddingGroup")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Редагувати", "Edit", new { id = item.GroupId }) |
                    @Html.ActionLink("Детальніше", "Details", new { id = item.GroupId }) |
                    @Html.ActionLink("Видалити", "Delete", new { id = item.GroupId })
                </td>
            </tr>
        }

    </table>
</content>